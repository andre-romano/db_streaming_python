{% macro render_input(texto, tipo, id, valor) %}
<div class="row mb-3">
    <label for="{{ id }}" class="col-sm-2 col-form-label text-right">{{ texto }}</label>
    <div class="col">
        <input type="{{ tipo }}" class="form-control" id="{{ id }}" name="{{ id }}" value="{{ valor }}">
    </div>
</div>
{% endmacro %}

{% macro render_select(texto, id, opcoes, value_selected) %}
<div class="row mb-3">
    <label for="{{ id }}" class="col-sm-2 col-form-label">{{ texto }}</label>
    <div class="col-sm-10">
        <select class="form-select" aria-label="Default select example" id="{{ id }}" name="{{ id }}">
            {% for valor, texto in opcoes %}
            {% set selected = "selected" if value_selected == valor else "" %}
            <option value="{{ valor }}" {{ selected }}>{{ texto }}</option>
            {% endfor %}
        </select>
    </div>
</div>
{% endmacro %}

{% macro render_table(cabecalho, dados) %}
<div class="container table-responsive">
    <table class="table table-hover align-middle border ">
        <thead>
            <tr>
                {% for texto in cabecalho %}
                <th scope="col">{{ texto }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for linha in dados %}
            <tr>
                {% for dado in linha %}
                <td scope="row">{{ dado }}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endmacro %}